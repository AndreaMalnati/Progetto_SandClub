<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.main.CapsFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/text_caps"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/testo"
            android:gravity="center_horizontal|top"
            android:text="@string/caps_drunk_beers"
            android:textColor="@color/md_theme_light_inversePrimary"
            android:textSize="40sp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerDrunkBeers"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/text_caps"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"/>

    </RelativeLayout>

</FrameLayout>