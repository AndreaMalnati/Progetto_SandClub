<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"


    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <TextView
        android:id="@+id/Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="99dp"
        android:layout_marginTop="127dp"
        android:layout_marginEnd="99dp"
        android:layout_marginBottom="543dp"
        android:fontFamily="@font/testo"
        android:text="Beer advisor"
        android:textColor="@color/orange"
        android:textSize="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_gravity="center"
        android:layout_marginStart="105dp"
        android:layout_marginTop="206dp"

        android:layout_marginEnd="105dp"
        android:layout_marginBottom="325dp"
        android:src="@drawable/logo_def"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.408"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.42" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        tools:ignore="MissingConstraints">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/loginBtn"
        android:layout_width="290dp"

        android:layout_height="45dp"

        android:layout_marginStart="60dp"
        android:layout_marginTop="436dp"
        android:layout_marginEnd="60dp"
        android:layout_marginBottom="250dp"
        android:height="45dp"
        android:background="@drawable/my_border"
        android:fontFamily="@font/testo"
        android:text="Login"
        android:textColor="@color/orange"
        android:textSize="18dp"
        />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/registerGoogleBtn"
            android:layout_width="290dp"

            android:layout_height="45dp"

            android:layout_marginStart="60dp"
            android:layout_marginTop="576dp"
            android:layout_marginEnd="60dp"
            android:layout_marginBottom="250dp"
            android:height="45dp"
            android:background="@drawable/my_border_google"
            android:fontFamily="@font/testo"
            android:text="registrati con google"
            android:textColor="@color/orange"
            android:textSize="18dp" />

        <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/registerBtn"

        android:layout_width="290dp"

        android:layout_height="45dp"

        android:layout_marginStart="60dp"
        android:layout_marginTop="506dp"
        android:layout_marginEnd="60dp"

        android:layout_marginBottom="175dp"
        android:background="@drawable/my_border"
        android:fontFamily="@font/testo"
        android:text="Registrati"
        android:textColor="@color/orange"
        android:textSize="18dp"
        app:layout_constraintBottom_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.52" />

    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>