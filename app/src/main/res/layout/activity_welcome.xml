<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"


    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <TextView
        android:id="@+id/Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="99dp"
        android:layout_marginTop="127dp"
        android:layout_marginEnd="99dp"
        android:layout_marginBottom="543dp"
        android:fontFamily="@font/BebasNeue"
        android:text="Beer advisor"
        android:textColor="@color/orange"
        android:textSize="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_gravity="center"
        android:layout_marginStart="105dp"
        android:layout_marginTop="206dp"

        android:layout_marginEnd="105dp"
        android:layout_marginBottom="325dp"
        android:src="@drawable/logo_def"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.408"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.42" />


    <Button
        android:id="@+id/loginBtn"
        style="@style/ButtonLoginStyle"
        android:layout_height="wrap_content"

        android:layout_marginStart="85dp"
        android:layout_marginTop="436dp"
        android:layout_marginEnd="86dp"
        android:layout_marginBottom="250dp"
        android:fontFamily="@font/BebasNeue"
        android:text="Login"
        android:textColor="@color/orange"
        android:textSize="18dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/registerBtn"
        style="@style/ButtonLoginStyle"
        android:layout_height="wrap_content"

        android:layout_marginStart="60dp"
        android:layout_marginEnd="61dp"
        android:layout_marginBottom="175dp"
        android:fontFamily="@font/BebasNeue"
        android:text="Registrati"
        android:textColor="@color/orange"
        android:textSize="18dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/loginBtn" />

    <Button
        android:id="@+id/registerGoogle"
        style="@style/ButtonLoginStyle"
        android:layout_height="wrap_content"

        android:layout_marginTop="12dp"
        android:backgroundTint="@color/black"
        android:fontFamily="@font/BebasNeue"
        android:text="Registrati con google"
        android:textColor="@color/orange"
        android:textSize="18dp"
        app:layout_constraintTop_toBottomOf="@+id/registerBtn"
        tools:layout_editor_absoluteX="61dp" />
    " />

</androidx.constraintlayout.widget.ConstraintLayout>